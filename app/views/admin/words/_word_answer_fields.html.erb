<div class="nested-fields">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-5">
        <%= f.text_field :content, class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= f.check_box :is_correct, class: "form-control" %>
      </div>
      <div class="col-md-1">
        <%= link_to_remove_fields t("form.remove_answer_word_field"), f %>
      </div>
    </div>
  </div>
</div>
