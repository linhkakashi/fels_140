<% provide :title, t("title.create_category") %>
<h1><%= t "title.create_category" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages", object: @category %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit t("form.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
