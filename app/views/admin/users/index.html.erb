<% provide :title, t("title.all_users") %>
<h1><%= t "title.all_users" %></h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= image_tag user.avatar_url(:thumb), size: Settings["AVATAR_SMALL_SIZE"] %>
      <%= link_to user.name, user %>
      <%= link_to t("form.update"), edit_admin_user_path(user) %>
      <%= link_to t("form.delete"), admin_user_path(user), method: :delete,
        data:{confirm: t("notice.delete_confirm")} %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
