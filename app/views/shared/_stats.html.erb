<% @user ||= current_user %>
<div class="stats">
  <%= link_to relationships_path(user_id: @user, relationship: "following") do %>
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t "follow_user.following" %>
  <% end %>
  <%= link_to relationships_path(user_id: @user, relationship: "followers") do %>
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
    <%= t "follow_user.follower" %>
  <% end %>
</div>
