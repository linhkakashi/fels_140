<div class="row">
  <div class="col-md-2 text-center">
    <section>
      <%= render "shared/user_info", user: @user %>
    </section>
    <br>
    <section>
      <%= render "shared/stats" %>
    </section>
    <br>
    <section>
      <%= render "users/follow_form" %>
    </section>
  </div>
  <% if @user == current_user %>
    <div class="col-md-7 col-md-offset-3">
      <div class="col-md-2">
        <%= link_to t("button.words"), words_path, class: "btn btn-primary btn-lg" %>
      </div>
      <div class="col-md-2">
        <%= link_to t("button.lesson"), categories_path, class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  <% else %>
    <div class="col-md-10"></div>
  <% end %>
  <div class="col-md-8">
    <h3><%= t "user.activity" %></h3>
    <hr>
    <div><%= render "users/activity" %></div>
  </div>
</div>
