<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info", user: current_user %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.welcome" %></h1>
    <h2><%= t "static_pages.introduction" %></h2>
    <%= link_to t("static_pages.sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: t("static_pages.logo")),
    "http://rubyonrails.org/" %>
<% end %>
