<% if logged_in? %>
  <%= render "users/user_profile" %>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.welcome" %></h1>
    <h2><%= t "static_pages.introduction" %></h2>
    <%= link_to t("static_pages.sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: t("static_pages.logo")),
    "http://rubyonrails.org/" %>
<% end %>
